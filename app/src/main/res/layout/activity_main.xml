<?xml version="1.0" encoding="utf-8"?>

<!--
    Udacity Android Lesson 1 Submission

    Requirements:
    - At least one photo representing the business
    - Business Name :
        - State Street Village
    - Phone number or email address for the business :
        - 734-973-0905
        - StateStreetVillage@mckinley.com
    - Address of the Business:
        - 2225 S. State Street, Ann Arbor , MI 48104

    Optional components:
    - Website for the business
    - Hours of operation
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jamesvuong.statestreetvillage.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ssv_cover"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ssv_living_room"
            android:scaleType="centerCrop"
            android:layout_marginLeft="6dp" />

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ssv_kitchen"
            android:scaleType="centerCrop"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ssv_laundry"
            android:scaleType="centerCrop"
            android:layout_marginRight="6dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
        android:layout_marginTop="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/business_name_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Business Name:"
                android:textStyle="bold"
                android:textSize="14dp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State Street Village"
                android:layout_toRightOf="@id/business_name_label"
                android:textSize="14dp"
                android:padding="6dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phone_number_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Phone Number: "
                android:textStyle="bold"
                android:textSize="14dp"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="734-973-0905"
                android:layout_toRightOf="@id/phone_number_label"
                android:textSize="14dp"
                android:padding="6dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/email_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textStyle="bold"
                android:textSize="14dp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StateStreetVillage@mckinley.com"
                android:layout_toRightOf="@id/email_label"
                android:textSize="14dp"
                android:padding="6dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/address_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textStyle="bold"
                android:textSize="14dp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2225 S. State Street, Ann Arbor , MI 48104"
                android:layout_toRightOf="@id/address_label"
                android:textSize="14dp"
                android:padding="6dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/website_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Website: "
                android:textStyle="bold"
                android:textSize="14dp"
                android:padding="6dp" />

            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://www.mckinley.com"
                android:layout_toRightOf="@id/website_label"
                android:textSize="14dp"
                android:padding="6dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
